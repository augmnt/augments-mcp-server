{
  "mcpServers": {
    "augments": {
      "command": "uv",
      "args": [
        "run",
        "augments-mcp-server"
      ],
      "cwd": "/path/to/augments-mcp-server",
      "env": {
        "AUGMENTS_CACHE_DIR": "~/.cache/augments-mcp-server",
        "AUGMENTS_CACHE_TTL": "3600"
      }
    }
  }
}